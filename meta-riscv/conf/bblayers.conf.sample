# LAYER_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
LCONF_VERSION = "6"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  ${TOPDIR}/../riscv-poky/meta \
  ${TOPDIR}/../riscv-poky/meta-yocto \
  ${TOPDIR}/../riscv-poky/meta-yocto-bsp \
  ${TOPDIR}/../riscv-poky/meta-riscv \
  ${TOPDIR}/../riscv-poky/meta-nexell \
  "
BBLAYERS_NON_REMOVABLE ?= " \
  ${TOPDIR}/../riscv-poky/meta \
  ${TOPDIR}/../riscv-poky/meta-yocto \
  "
